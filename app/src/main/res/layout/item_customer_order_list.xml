<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_customer_order_list_order_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/sc_green_bg"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:text="询价订单"
                android:textColor="#FFFFFF"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_customer_order_list_st_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_front_st_place"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="信息园" />

        <TextView
            android:id="@+id/item_customer_order_list_ed_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_front_ed_place"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="市政府" />

        <TextView
            android:id="@+id/item_customer_order_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_front_st_time"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="2017-08-22 -- 2017-08-23" />

        <TextView
            android:id="@+id/item_customer_order_list_seats_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_front_costomer_num"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="26座/300元" />

        <TextView
            android:id="@+id/item_customer_order_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_rear_name"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="曾美丽" />

        <TextView
            android:id="@+id/item_customer_order_list_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/ask_order_rear_phone"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="123465798" />

        <LinearLayout
            android:id="@+id/item_customer_order_list_function_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_customer_order_list_stand_car_list_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_orange_arc_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="空车列表"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/item_customer_order_list_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/tv_orange_frame_white_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消询价"
                android:textColor="#F9AA6A"
                android:textSize="17sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>