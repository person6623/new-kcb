<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_stand_car_list_plate_or_tname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_orange_frame_white_bg"
            android:text="京K3B"
            android:textColor="#F89723"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_stand_car_list_scope_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="甘孜阿坝" />

        <TextView
            android:id="@+id/item_stand_car_list_seats_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_stand_car_list_plate_or_tname_tv"
            android:text="36座 县级客运" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_stand_car_list_scope_tv"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/item_stand_car_list_mark_rtb"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressTint="#F89723"
                android:rating="3.5"
                android:secondaryProgressTint="#999999"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/item_stand_car_list_mark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#F89723" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_stand_car_list_line_tv"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/item_stand_car_list_seats_tv"
            android:layout_marginTop="7dp"
            android:background="#999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_stand_car_list_line_tv"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_stand_car_list_call_driver_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_orange_arc_bg"
                android:drawableLeft="@mipmap/ic_launcher"
                android:gravity="center"
                android:padding="7dp"
                android:text="刘师傅"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/item_stand_car_list_selcet_car_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_orange_arc_bg"
                android:gravity="center"
                android:padding="7dp"
                android:text="选择该车"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>