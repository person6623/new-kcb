<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/xlv_item_coupon_all_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/xlv_item_coupon_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="顺风车"
            android:textColor="#515151"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/xlv_item_coupon_max_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xlv_item_coupon_name_tv"
            android:padding="3dp"
            android:text="最高使用金额100元"
            android:textColor="#AAAAAA" />

        <TextView
            android:id="@+id/xlv_item_coupon_ratio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5折"
            android:textColor="#F78100"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/xlv_item_coupon_all_time_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xlv_item_coupon_max_price_tv"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间: "
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/xlv_item_coupon_st_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-03-05"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间: "
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/xlv_item_coupon_ed_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-03-05"
                    android:textColor="#AAAAAA"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/xlv_item_coupon_state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xlv_item_coupon_all_rl"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/coupon_item_overdue" />
</RelativeLayout>