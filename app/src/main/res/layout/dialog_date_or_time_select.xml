<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dialog_date_or_time_select_date_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <DatePicker
                android:id="@+id/dialog_date_or_time_select_date_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:calendarViewShown="true"></DatePicker>

            <TimePicker
                android:id="@+id/dialog_date_or_time_select_time_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_date_or_time_select_date_dp"
                android:layout_centerHorizontal="true"></TimePicker>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>