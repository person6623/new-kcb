<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/ask_order_front_st_place_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ask_order_front_st_place_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ask_order_front_st_place_add_iv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@mipmap/ask_order_front_st_place"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="上车点" />

                    <TextView
                        android:id="@+id/ask_order_front_st_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ask_order_front_st_place_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_st_place_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/ask_order_front_pass_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ask_order_front_pass_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/ask_order_front_pass_add_iv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_pass"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="途经点(选填)" />

                    <TextView
                        android:id="@+id/ask_order_front_pass_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ask_order_front_pass_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_pass_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_front_pass_add" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/ask_order_front_ed_place_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ask_order_front_ed_place_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ask_order_front_ed_place_add_tv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_ed_place"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="下车点" />

                    <TextView
                        android:id="@+id/ask_order_front_ed_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ask_order_front_ed_place_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_ed_place_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/ask_order_front_st_time_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/ask_order_front_st_time_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ask_order_front_st_time_add_tv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_st_time"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="开始时间" />

                    <TextView
                        android:id="@+id/ask_order_front_st_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ask_order_front_st_time_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_st_time_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/ask_order_front_ed_time_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ask_order_front_ed_time_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/ask_order_front_ed_time_add_tv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_ed_time"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="结束时间" />

                    <TextView
                        android:id="@+id/ask_order_front_ed_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ask_order_front_ed_time_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_ed_time_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/ask_order_front_costomer_num_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ask_order_front_costomer_num_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:text="选择车辆规格" />

                <TextView
                    android:id="@+id/ask_order_front_costomer_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_costomer_num_title_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:text="" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ask_order_front_seek_null_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ask_order_front_seek_null_iv"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <Button
                android:id="@+id/ask_order_front_next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_orange_arc_bg"
                android:text="下一步"
                android:textColor="#FFFFFF" />


            <TextView
                android:id="@+id/ask_order_front_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="说明:计算器预估价格只能作为参考,不作为实际租车价格! 具体价格请咨询师傅!"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>