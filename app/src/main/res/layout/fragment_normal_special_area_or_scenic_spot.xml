<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/normal_special_stay_place_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/normal_special_stay_place_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:layout_toLeftOf="@+id/normal_special_stay_place_add_iv"
                    android:drawableLeft="@mipmap/ask_order_front_st_place"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请选择待命城市"
                    android:text=""
                    android:textColorHint="#999999" />

                <ImageView
                    android:id="@+id/normal_special_stay_place_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ask_order_front_st_place_tv"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />

            <RelativeLayout
                android:id="@+id/normal_special_seats_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/normal_special_seats_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:layout_toLeftOf="@+id/normal_special_seats_add_iv"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请选择车辆大小"
                    android:text=""
                    android:textColorHint="#999999" />

                <ImageView
                    android:id="@+id/normal_special_seats_add_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/normal_special_seats_tv"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />

            <LinearLayout
                android:id="@+id/normal_special_scope_select_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/normal_special_scope_select_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请选择区域"
                    android:textColorHint="#999999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="5dp"
                    android:background="#D2D2D2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/normal_special_oil_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请输入每公里油耗"
                    android:text=""
                    android:textColorHint="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text=" /公里" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <LinearLayout
                android:id="@+id/normal_special_day_price_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/normal_special_day_km_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:text="每日公里数" />

                <EditText
                    android:id="@+id/normal_special_km_price_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:hint="每公里单价"
                    android:textColorHint="#999999"
                    android:textSize="13sp" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/normal_special_st_time_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/normal_special_st_time_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/normal_special_st_time_add_tv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_st_time"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="开始时间" />

                    <TextView
                        android:id="@+id/normal_special_st_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/normal_special_st_time_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/normal_special_st_time_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginTop="5dp"
                android:background="#D2D2D2" />


            <RelativeLayout
                android:id="@+id/normal_special_ed_time_all_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/normal_special_ed_time_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/normal_special_ed_time_add_tv"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@mipmap/ask_order_front_ed_time"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:text="结束时间" />

                    <TextView
                        android:id="@+id/normal_special_ed_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/normal_special_ed_time_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/normal_special_ed_time_ll"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ask_order_go_iv" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/normal_special_free_meet_scope_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/normal_special_free_meet_scope_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请输入免费接送范围"
                    android:textColorHint="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="5dp"
                    android:background="#D2D2D2" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/normal_special_out_scope_unit_price_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/normal_special_out_scope_unit_price_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@mipmap/ask_order_front_costomer_num"
                    android:drawablePadding="5dp"
                    android:gravity="bottom"
                    android:hint="请输入超范围价格(元/公里)"
                    android:textColorHint="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginTop="5dp"
                    android:background="#D2D2D2" />
            </LinearLayout>


            <Button
                android:id="@+id/normal_special_sub_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_orange_arc_bg"
                android:text="下一步"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="说明:计算其预估价格只能作为参考,不作为实际租车价格!具体价格请咨询师傅!"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>